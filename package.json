{
  "name": "HCM",
  "version": "1.0.0",
  "description": "You Zhao HCM",
  "engines": {
    "npm": ">=5",
    "node": ">=8"
  },
  "scripts": {
    "//mock": "启动mock server",
    "mock": "node mock/server.js",
    "//analyze:clean": "删除stats.json",
    "analyze:clean": "rimraf stats.json",
    "//preanalyze": "删除stats.json",
    "preanalyze": "npm run analyze:clean",
    "//analyze": "生成stats.json，显示模块的打包信息",
    "analyze": "node ./internals/scripts/analyze.js",
    "//postinstall": "通过postinstall hoot，在install之后执行build:dll",
    "postinstall": "npm run build:dll",
    "//prebuild": "清理build文件夹",
    "prebuild": "npm run build:clean",
    "//build": "build项目",
    "build": "cross-env NODE_ENV=production webpack --config internals/webpack/webpack.prod.babel.js --color -p --progress --hide-modules --display-optimization-bailout",
    "//build:clean": "清空build文件夹",
    "build:clean": "rimraf ./build",
    "//build:dll": "build dll",
    "build:dll": "node ./internals/scripts/dependencies.js",
    "//start": "使用mock数据，本地启动项目",
    "start": "cross-env DEPLOY_ENV=mock NODE_ENV=development node server",
    "//start:tunnel": "使用ngrok作为反向代理启动项目",
    "start:tunnel": "cross-env NODE_ENV=development ENABLE_TUNNEL=true node server",
    "//start:production": "已产品环境启动项目",
    "start:production": "npm run test && npm run build && npm run start:prod",
    "//start:prod": "以产品环境启动项目",
    "start:prod": "cross-env NODE_ENV=production node server",
    "//clean": "清空test i18n的资源",
    "clean": "shjs ./internals/scripts/clean.js",
    "//clean:all": "执行所有的清理",
    "clean:all": "npm run analyze:clean && npm run test:clean && npm run build:clean",
    "//lint": "lint js 和 less 文件",
    "lint": "npm run lint:js && npm run lint:less",
    "//lint:less": "lint less 文件",
    "lint:less": "stylelint 'app/**/*.less'",
    "//lint:eslint": "lint js 的前置组合命令，给lint:js使用",
    "lint:eslint": "eslint --ignore-pattern app/utils/pinyinUtil.js --ignore-path .gitignore --ignore-pattern internals/scripts",
    "//lint:eslint:fix": "lint js 并 fix 相应的问题",
    "lint:eslint:fix": "eslint --ignore-pattern app/utils/pinyinUtil.js --ignore-path .gitignore --ignore-pattern internals/scripts --fix",
    "//lint:js": "lint js 文件",
    "lint:js": "npm run lint:eslint -- . ",
    "//lint:staged": "lint staged 中的文件，每次有修改时，加快lint的速度",
    "lint:staged": "lint-staged",
    "//pretest": "在测试前的准备工作",
    "pretest": "npm run test:clean && npm run lint",
    "//test:clean": "测试前清理上次的测试报告",
    "test:clean": "rimraf ./coverage",
    "//test": "执行jest测试，并生成覆盖率报告",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "//test:watch": "以 watch 模式运行 jest 测试，持续测试每次改动",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "//coveralls": "生成测试报告",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "//prettify": "format 文件",
    "prettify": "prettier --write",
    "//start:dev": "本地连接dev环境api进行连调",
    "start:dev": "cross-env DEPLOY_ENV=dev NODE_ENV=development node server",
    "//start:uat": "本地连接uat环境api进行连调",
    "start:uat": "cross-env DEPLOY_ENV=uat NODE_ENV=development node server",
    "//buildApp": "打包app，通过 '[-- --env=dev|uat|local|prod]' 的方式指定打包时使用config的配置环境",
    "buildApp": "npm run prebuild && node ./script/build.js",
    "//deploy": "打包开发环境并发布到指定的服务器上。通过 '[-- --env=dev|uat|local|prod]' 的方式指定打包时使用config的配置环境",
    "deploy": "node ./script/deployApp.js",
    "sonar-scanner": "node_modules/sonar-scanner/bin/sonar-scanner -Dsonar.projectKey=hcm-ui -Dsonar.host.url=http://sonar.youzhao.io -Dsonar.login=6222d90fbf623577b8b17a74f1c00d1326c961f6 -Dsonar.sources=app"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:eslint:fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "pre-commit": "lint:staged",
  "dllPlugin": {
    "path": "node_modules/youzhao-hcm-dlls",
    "exclude": [
      "chalk",
      "compression",
      "cross-env",
      "express",
      "ip",
      "minimist",
      "sanitize.css"
    ],
    "include": [
      "core-js",
      "lodash",
      "eventsource-polyfill"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "app/**/*.{js,jsx}",
      "!app/**/*.test.{js,jsx}",
      "!app/*/RbGenerated*/*.{js,jsx}",
      "!app/app.js",
      "!app/global-styles.js",
      "!app/*/*/Loadable.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "moduleDirectories": [
      "node_modules",
      "app"
    ],
    "moduleNameMapper": {
      ".*\\.(css|less|styl|scss|sass)$": "<rootDir>/internals/mocks/cssModule.js",
      ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/internals/mocks/image.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/internals/testing/test-bundler.js",
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/internals/testing/enzyme-setup.js"
    ],
    "testRegex": "tests/.*\\.test\\.js$",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "dependencies": {
    "ali-oss": "^6.0.1",
    "antd": "^3.7.0",
    "babel-polyfill": "6.26.0",
    "chalk": "^2.4.1",
    "compression": "1.7.2",
    "cross-env": "5.2.0",
    "dva": "^2.4.0",
    "dva-loading": "^2.0.5",
    "express": "4.16.3",
    "formik": "^1.2.0",
    "history": "4.7.2",
    "immutable": "3.8.2",
    "ip": "1.1.5",
    "js-cookie": "^2.2.0",
    "lodash": "4.17.10",
    "minimist": "1.2.0",
    "moment": "2.18.1",
    "prop-types": "15.6.1",
    "rc-trigger": "^2.6.2",
    "rc-upload": "^2.6.0",
    "react": "16.4.1",
    "react-contenteditable": "^3.1.0",
    "react-dnd": "^5.0.0",
    "react-dnd-html5-backend": "^5.0.1",
    "react-document-title": "^2.0.3",
    "react-dom": "16.4.1",
    "react-loadable": "5.4.0",
    "react-motion": "^0.5.2",
    "react-redux": "5.0.7",
    "react-router-dom": "4.3.1",
    "react-router-redux": "5.0.0-alpha.9",
    "redux": "4.0.0",
    "redux-immutable": "4.0.0",
    "redux-saga": "0.16.0",
    "reselect": "3.0.1",
    "sanitize.css": "4.1.0",
    "styled-components": "3.3.2",
    "url-polyfill": "^1.0.14",
    "validator": "^10.7.1",
    "whatwg-fetch": "2.0.4",
    "yup": "^0.26.3"
  },
  "devDependencies": {
    "add-asset-html-webpack-plugin": "2.1.3",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.3",
    "babel-loader": "7.1.4",
    "babel-plugin-dynamic-import-node": "1.2.0",
    "babel-plugin-import": "^1.8.0",
    "babel-plugin-react-transform": "3.0.0",
    "babel-plugin-styled-components": "1.5.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "babel-plugin-transform-react-constant-elements": "6.23.0",
    "babel-plugin-transform-react-inline-elements": "6.22.0",
    "babel-plugin-transform-react-jsx-source": "6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.13",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "circular-dependency-plugin": "5.0.2",
    "coveralls": "3.0.1",
    "css-loader": "0.28.11",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.4",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-import-resolver-webpack": "0.10.0",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.9.1",
    "eslint-plugin-redux-saga": "0.9.0",
    "eventsource-polyfill": "0.9.6",
    "exports-loader": "0.7.0",
    "file-loader": "1.1.11",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "husky": "^0.14.3",
    "image-webpack-loader": "4.3.1",
    "imports-loader": "0.8.0",
    "jest-cli": "23.1.0",
    "jest-styled-components": "5.0.1",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "lint-staged": "7.2.0",
    "ngrok": "3.0.1",
    "node-plop": "0.15.0",
    "null-loader": "0.1.1",
    "offline-plugin": "5.0.5",
    "plop": "2.0.0",
    "pre-commit": "1.2.2",
    "prettier": "1.13.5",
    "react-test-renderer": "16.4.1",
    "rimraf": "2.6.2",
    "shelljs": "^0.8.2",
    "style-loader": "0.21.0",
    "stylelint": "9.3.0",
    "stylelint-config-recommended": "2.1.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.3.1",
    "svg-url-loader": "2.3.2",
    "url-loader": "1.0.1",
    "webpack": "4.12.0",
    "webpack-cli": "3.0.8",
    "webpack-dev-middleware": "3.1.3",
    "webpack-hot-middleware": "2.22.2",
    "webpack-pwa-manifest": "3.6.2",
    "sonar-scanner": "3.1.0"
  }
}
